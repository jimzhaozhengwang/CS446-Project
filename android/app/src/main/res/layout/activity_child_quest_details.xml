<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/quest_image_view"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp" />

        <TextView
            android:id="@+id/quest_name_text_view"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/quest_image_view"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/quest_exp_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/quest_name_text_view"
            android:layout_marginStart="170dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/exp_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/quest_name_text_view"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/quest_exp_text_view"
            android:text="@string/exp"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/quest_status_image_view"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@id/exp_text_view"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="70dp"
            android:src="@drawable/yellow_check_mark" />

        <TextView
            android:id="@+id/quest_status_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/exp_text_view"
            android:layout_marginStart="60dp"
            android:layout_marginTop="75dp"
            android:paddingStart="10dp"
            android:paddingEnd="25dp"
            android:textSize="20sp" />

        <Button
            android:id="@+id/add_proof_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/exp_text_view"
            android:layout_marginStart="280dp"
            android:layout_marginTop="70dp"
            android:text="@string/add_proof" />

        <TextView
            android:id="@+id/quest_due_date_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/quest_status_text_view"
            android:layout_marginTop="20dp"
            android:paddingStart="25dp"
            android:paddingEnd="25dp"
            android:text="@string/due_date"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/quest_date_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/quest_status_text_view"
            android:layout_marginStart="150dp"
            android:layout_marginTop="20dp"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/quest_due_time_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/quest_due_date_text_view"
            android:layout_marginTop="20dp"
            android:paddingStart="25dp"
            android:paddingEnd="25dp"
            android:text="@string/due_time"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/quest_time_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/quest_due_date_text_view"
            android:layout_marginStart="150dp"
            android:layout_marginTop="20dp"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/quest_recurrence_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/quest_due_time_text_view"
            android:layout_marginTop="20dp"
            android:paddingStart="25dp"
            android:paddingEnd="25dp"
            android:text="@string/recurrence"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/recurrence_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/quest_due_time_text_view"
            android:layout_marginStart="150dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="5dp"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/description_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/quest_recurrence_text_view"
            android:layout_marginTop="20dp"
            android:paddingStart="25dp"
            android:paddingEnd="25dp"
            android:text="@string/description"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/quest_description_text_view"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@id/description_text_view"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="25dp"
            android:background="@drawable/border"
            android:paddingStart="10dp"
            android:paddingTop="10dp"
            android:textSize="15sp" />

    </RelativeLayout>
</ScrollView>
