<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginTop="5dp"
    android:layout_marginEnd="10dp"
    android:layout_marginBottom="5dp"
    android:background="@drawable/border"
    android:backgroundTint="@color/very_light_blue"
    android:clickable="true"
    android:focusable="true"
    android:paddingHorizontal="5dp"
    android:paddingVertical="5dp">

    <ImageView
        android:id="@+id/quest_image_view"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="25dp" />


    <TextView
        android:id="@+id/quest_name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/quest_image_view"
        android:layout="@id/quest_image_view"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/quest_owner_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/quest_name_text_view"
        android:layout_toEndOf="@id/quest_image_view"
        android:textSize="17sp" />


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/quest_owner_text_view"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/quest_image_view">

        <TextView
            android:id="@+id/quest_exp_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/quest_due_date_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="70dp"
            android:layout_toRightOf="@id/quest_exp_text_view"
            android:textSize="17sp" />

    </RelativeLayout>

</RelativeLayout>
