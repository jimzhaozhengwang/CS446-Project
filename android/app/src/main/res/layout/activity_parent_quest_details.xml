<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/quest_image_view"
            android:src="@drawable/broom"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp" />

        <TextView
            android:id="@+id/quest_name_text_view"
            android:text="Sweep the floor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/quest_image_view"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/quest_exp_text_view"
            android:text="30 Exp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/quest_name_text_view"
            android:layout_centerHorizontal="true"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/quest_status_image_view"
            android:src="@drawable/yellow_check_mark"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_below="@id/quest_exp_text_view" />

        <TextView
            android:id="@+id/quest_status_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/quest_exp_text_view"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:paddingStart="80dp"
            android:paddingEnd="25dp"
            android:text="Pending Approval"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/quest_mandatory_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/quest_status_text_view"
            android:layout_marginTop="20dp"
            android:paddingStart="25dp"
            android:paddingEnd="25dp"
            android:text="Mandatory"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/quest_due_date_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/quest_mandatory_text_view"
            android:layout_marginTop="20dp"
            android:paddingStart="25dp"
            android:paddingEnd="25dp"
            android:text="Due: Today"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/quest_recurrence_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/quest_due_date_text_view"
            android:layout_marginTop="20dp"
            android:paddingStart="25dp"
            android:paddingEnd="25dp"
            android:text="Recurring: Every Monday"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/quest_owner_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/quest_recurrence_text_view"
            android:layout_marginTop="20dp"
            android:paddingStart="25dp"
            android:paddingEnd="25dp"
            android:text="Child: Isabelle"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/quest_description_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/quest_owner_text_view"
            android:layout_marginTop="20dp"
            android:paddingStart="25dp"
            android:paddingEnd="25dp"
            android:text="Description: blablabla"
            android:textSize="20sp" />

    </RelativeLayout>
</ScrollView>