<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/quest_image_view"
            android:src="@drawable/broom"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp" />

        <Spinner
            android:id="@+id/quest_name_spinner"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/quest_image_view"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:prompt="@string/select_a_quest" />

        <EditText
            android:id="@+id/quest_exp_edit_text"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/quest_name_spinner"
            android:layout_marginTop="10dp"
            android:textSize="15sp"
            android:background="@drawable/border" />

        <TextView
            android:id="@+id/exp_text_view"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_below="@id/quest_name_spinner"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="250dp"
            android:paddingEnd="25dp"
            android:text="Exp"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/quest_status_image_view"
            android:src="@drawable/yellow_check_mark"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_below="@id/quest_exp_edit_text" />

        <TextView
            android:id="@+id/quest_status_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/quest_exp_edit_text"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:paddingStart="80dp"
            android:paddingEnd="25dp"
            android:text="Pending Approval"
            android:textSize="20sp" />


        <TextView
            android:id="@+id/quest_due_date_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/quest_status_text_view"
            android:layout_marginTop="20dp"
            android:paddingStart="25dp"
            android:paddingEnd="25dp"
            android:text="Due date:"
            android:textSize="20sp" />

        <Button
            android:id="@+id/quest_select_date_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/quest_status_text_view"
            android:layout_marginTop="10dp"
            android:layout_marginStart="130dp" />

        <TextView
            android:id="@+id/quest_due_time_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/quest_due_date_text_view"
            android:layout_marginTop="20dp"
            android:paddingStart="25dp"
            android:paddingEnd="25dp"
            android:text="Due time:"
            android:textSize="20sp" />

        <Button
            android:id="@+id/quest_select_time_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/quest_due_date_text_view"
            android:layout_marginTop="10dp"
            android:layout_marginStart="130dp" />

        <TextView
            android:id="@+id/quest_recurrence_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/quest_due_time_text_view"
            android:layout_marginTop="20dp"
            android:paddingStart="25dp"
            android:paddingEnd="25dp"
            android:text="Recurring:"
            android:textSize="20sp" />

        <Spinner
            android:id="@+id/select_recurrence_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/quest_due_time_text_view"
            android:layout_marginStart="130dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="5dp"
            android:prompt="@string/select_a_child" />

        <TextView
            android:id="@+id/quest_owner_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/quest_recurrence_text_view"
            android:layout_marginTop="20dp"
            android:paddingStart="25dp"
            android:paddingEnd="25dp"
            android:text="Child: "
            android:textSize="20sp" />

        <Spinner
            android:id="@+id/select_child_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/quest_recurrence_text_view"
            android:layout_marginStart="100dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="5dp"
            android:prompt="@string/select_a_child" />

        <EditText
            android:id="@+id/description_edit_text"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@id/quest_owner_text_view"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="5dp"
            android:background="@drawable/border"
            android:inputType="textMultiLine" />

    </RelativeLayout>
</ScrollView>
